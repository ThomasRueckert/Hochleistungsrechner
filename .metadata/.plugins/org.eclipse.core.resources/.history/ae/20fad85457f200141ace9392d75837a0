########## the compilers and their flags #################
# the compilers
CUDACC :=  /opt/cuda/bin/nvcc
# flags
CUDACC_FLAGS := /opt/cuda/include /usr/local/include /usr/include

########## Build Rules #################
all: measure

clean: 
	rm -f measure

measure: measure.cu
	 $(CUDACC) $(CUDACC_FLAGS) $< -o $@ $(CFLAGS)
